    "test:watch": "wtr \"src/**/*.test.ts\" --watch"
  },
  "dependencies": {
    "lit-element": "^2.4.0"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.5.32",
    "@types/mocha": "^8.0.3",
    "@types/sinon": "^9.0.8",
    "@web/dev-server": "^0.0.19",
    "@web/dev-server-esbuild": "^0.2.6",
    "@web/test-runner": "^0.9.7",
    "lit-analyzer": "^1.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.1",
    "typescript": "^4.0.5",
    "web-component-analyzer": "^1.1.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "vime",
    "player",
    "media",
    "audio",
    "video",
    "html5",
