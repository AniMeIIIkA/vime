{
  "name": "@vime/core",
  "version": "4.3.1",
  "description": "Customizable, extensible, accessible and framework agnostic media player.",
  "license": "MIT",
  "sideEffects": false,
  "main": "",
  "module": "",
  "types": "@types/",
  "files": [
    "dist/",
    "icons/",
    "themes/",
    "@types/"
  ],
  "contributors": [
    "Rahim Alwer <rahim_alwer@outlook.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vime-js/vime.git"
  },
  "bugs": {
    "url": "https://github.com/vime-js/vime/issues"
  },
  "scripts": {
    "analyze": "wca analyze \"src/components/index.ts\" --outFile custom-elements.json",
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "serve": "wds",
