{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "@types",
    "sourceMap": true,
    "outDir": "dist",
    "plugins": [{
      "name": "ts-lit-plugin",
      "strict": true
    }]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**",
    "src/**/*.test.ts"
  ]
}
